# Mentorium Chat Bot - Environment Template for Production
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION (Bot DB - Read/Write)
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=mentoriumbot
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_NAME=mentorium_bot

# ============================================
# PLATFORM DATABASE (Mentorium Platform - Read Only)
# ============================================
PLATFORM_DB_HOST=platform-db.mentorium.io
PLATFORM_DB_PORT=5432
PLATFORM_DB_USER=readonly_user
PLATFORM_DB_PASSWORD=CHANGE_ME_PLATFORM_PASSWORD
PLATFORM_DB_NAME=mentorium_platform

# Или полный URL
PLATFORM_DB_URL=postgresql+psycopg://readonly_user:password@db.mentorium.uz:5432/mentorium_platform

# ============================================
# BOT DATABASE URL (альтернативный формат)
# ============================================
BOT_DB_URL=postgresql+psycopg://mentoriumbot:CHANGE_ME_SECURE_PASSWORD@postgres:5432/mentorium_bot

# ============================================
# REDIS (Optional - for caching/queues)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0

# ============================================
# TELEGRAM BOT
# ============================================
# Get token from @BotFather
BOT_TELEGRAM_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ============================================
# OPENAI API
# ============================================
# Get from https://platform.openai.com/api-keys
BOT_OPENAI_API_KEY=sk-proj-...your_openai_key_here
REPORT_OPENAI_API_KEY=sk-proj-...your_openai_key_here

# ============================================
# PAYMENT PROVIDERS (Optional)
# ============================================
# PayMe (Uzbekistan) - https://payme.uz
BOT_PAYME_MERCHANT_ID=
BOT_PAYME_SECRET_KEY=
BOT_PAYME_TEST_MODE=false
PAYME_ENDPOINT=https://checkout.paycom.uz

# Click (Uzbekistan) - https://click.uz
BOT_CLICK_MERCHANT_ID=
BOT_CLICK_SERVICE_ID=
BOT_CLICK_SECRET_KEY=
BOT_CLICK_TEST_MODE=false
CLICK_ENDPOINT=https://api.click.uz/v2

# ============================================
# SUBSCRIPTION TARIFFS (in UZS)
# ============================================
BOT_TARIFF_MONTHLY_PRICE=99000
BOT_TARIFF_QUARTERLY_PRICE=249000
BOT_TARIFF_ANNUAL_PRICE=899000

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json             # json or text
ENVIRONMENT=production      # development, staging, production

# ============================================
# SENTRY (Optional - Error Tracking)
# ============================================
# Get DSN from https://sentry.io
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=production
GIT_COMMIT=unknown

# ============================================
# WEBHOOK CONFIGURATION
# ============================================
WEBHOOK_PORT=8001
WEBHOOK_BASE_URL=https://webhooks.mentorium.io

# ============================================
# REPORT SETTINGS
# ============================================
BOT_REPORT_PERIOD=текущую неделю
REPORT_SCHEDULE_CRON=0 18 * * 0  # Sunday 18:00

# ============================================
# CRM INTEGRATION (Optional)
# ============================================
# CRM_API_URL=https://your-crm.com/api/v2
# CRM_API_TOKEN=your_token

# ============================================
# DOCKER COMPOSE SETTINGS
# ============================================
COMPOSE_PROJECT_NAME=mentorium
