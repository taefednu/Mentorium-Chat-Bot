{
  "include": [
    "apps",
    "packages",
    "tests",
    "scripts"
  ],
  "exclude": [
    "**/__pycache__",
    "**/.pytest_cache",
    "**/.ruff_cache",
    "**/.mypy_cache",
    "**/node_modules",
    "**/.venv",
    "**/dist"
  ],
  "stubPath": "",
  "venvPath": ".",
  "venv": ".venv",
  "pythonVersion": "3.11",
  "pythonPlatform": "Linux",
  "executionEnvironments": [
    {
      "root": "apps/telegram_bot",
      "pythonVersion": "3.11",
      "extraPaths": [
        "packages/ai_client",
        "packages/core",
        "packages/db"
      ]
    },
    {
      "root": "apps/reporting_worker",
      "pythonVersion": "3.11",
      "extraPaths": [
        "packages/ai_client",
        "packages/core",
        "packages/db"
      ]
    },
    {
      "root": "apps/billing_service",
      "pythonVersion": "3.11",
      "extraPaths": [
        "packages/core",
        "packages/db"
      ]
    },
    {
      "root": "packages/ai_client",
      "pythonVersion": "3.11"
    },
    {
      "root": "packages/core",
      "pythonVersion": "3.11"
    },
    {
      "root": "packages/db",
      "pythonVersion": "3.11",
      "extraPaths": [
        "packages/core"
      ]
    },
    {
      "root": "tests",
      "pythonVersion": "3.11",
      "extraPaths": [
        "packages/ai_client",
        "packages/core",
        "packages/db"
      ]
    },
    {
      "root": "scripts",
      "pythonVersion": "3.11",
      "extraPaths": [
        "packages/db"
      ]
    }
  ],
  "typeCheckingMode": "basic",
  "useLibraryCodeForTypes": true,
  "reportMissingImports": "warning",
  "reportMissingTypeStubs": false
}
